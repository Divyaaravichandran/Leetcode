class Solution {
    public List<Boolean> kidsWithCandies(int[] candies, int extraCandies) {
        int max = 0;
        for(int candy:candies)
        {
            max = Math.max(max,candy);
        }
        List<Boolean> l = new ArrayList<>();
        for(int candy:candies)
        {
            if(extraCandies+candy>=max)
                l.add(true);
            else
                l.add(false);
        }
        return l;
    }
}